@model IEnumerable<BethanysPieShop.Models.Pie>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
 
</head>
<body>
    <hd>@ViewBag.Title</hd>

    @foreach(var pie in Model)
    {
        <div>
            <h2>@pie.Name</h2>
            <h3>@pie.Price.ToString("c")</h3>
        </div>
    }
</body>
</html>

